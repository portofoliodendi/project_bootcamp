		{
			"name": "Get User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"//Ini fungsinya untuk cek apakah user sudah terdaftar atau belum. Kamu bisa ganti namanya di variable collection yaa!!!\r",
							"let targetName = pm.collectionVariables.get(\"search_name\");\r",
							"if (!targetName || targetName.trim() === \"\") {\r",
							"\r",
							"    pm.test(\"Error: Nama belum diisi!\", function () {\r",
							"        pm.expect.fail(\"Kamu lupa isi variable 'search_name' di tab Variables Collection. Isi dulu yaaa!!!\");\r",
							"    });\r",
							"\r",
							"} else {\r",
							"    let jsonData = pm.response.json();\r",
							"    let userList = jsonData.users || [];\r",
							"\r",
							"    let userFound = userList.find(user => {\r",
							"        return user.username &&\r",
							"            typeof user.username === 'string' &&\r",
							"            user.username.toLowerCase().trim() === targetName.toLowerCase().trim();\r",
							"    });\r",
							"\r",
							"    if (userFound) {\r",
							"        pm.test(`Hasil: User '${targetName}' Sudah terdaftar di list`, function () {\r",
							"            pm.expect(userFound).to.not.be.undefined;\r",
							"        });\r",
							"    } else {\r",
							"        pm.test(`Hasil: User '${targetName}' Belum ada di list `, function () {\r",
							"            pm.expect.fail(`User '${targetName}' tidak terdaftar sebagau user.`);\r",
							"        });\r",
							"    }\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
